//输出1-100的偶数和
/*
#include<stdio.h>
int main()
{
    int i = 0;
    int sum = 0;
    while(i<=100){
        if(i%2==0)
            sum += i;
    i++;
    }
    printf("%d",sum);
    return 0;
}
*/


//switch(整形){}语句运用
/*
#include<stdio.h>
int main()
{
    int day = 0;
    scanf("%d",&day);
    switch(day)
    {
    case 1:printf("星期1\n");break;
    case 2:printf("星期2\n");break;
    case 3:printf("星期3\n");break;
    default://处理非法状况
        printf("请输入1-3的数字\n");
        break;
    }
    return 0;
}
*/


//switch语句可以嵌套；结果m=5，n=3；
/*
#include<stdio.h>
int main()
{
    int n = 1;
    int m = 2;
    switch(n)
    {
    case 1: m++;
    case 2: n++;
    case 3:
        switch (n)
        {
        case 1:n++;
        case 2:m++;n++;break;
        }
    case 4:m++;
        break;
    }
    printf("m = %d, n = %d\n",m,n);
    return 0;
}
*/

/*
#include<stdio.h>
int main()
{
    int i = 0;
    while(i<10)
    {
        i++;
        if( 5 == i)
        continue;
        printf("%d\n",i);

    }
    return 0;
}
*/


//getchar  putchar的使用；程序没有什么意义。
/*
#include<stdio.h>
int main()
{
    int ch = 0;//ctrl + z 获取EOF则退出；EOF-end of file ->-1；
    while((ch=getchar()) !=EOF)
    {
        putchar(ch);//等价于printf("%c\n",ch)
    }
    return 0;
}
*/

